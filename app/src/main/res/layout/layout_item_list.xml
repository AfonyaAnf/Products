<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/HeaderText"
                tools:text="Name product"/>
        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/priceTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/TitleText"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/price"
                android:text="@string/price"/>
        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/priceTitle"
                app:layout_constraintLeft_toRightOf="@+id/priceTitle"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/price"/>
        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/countTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/TitleText"
                app:layout_constraintTop_toBottomOf="@+id/priceTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/count"
                android:text="@string/count"/>
        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/countTitle"
                app:layout_constraintLeft_toRightOf="@+id/countTitle"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/count"/>

    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>